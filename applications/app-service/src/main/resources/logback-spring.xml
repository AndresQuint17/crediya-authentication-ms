<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Cargar configuración de colores de Spring Boot -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Patrón con colores ANSI para consola -->
    <property name="COLORED_PATTERN"
              value="%clr(%d{yyyy-MM-dd HH:mm:ss}){faint} %highlight(%-5level) %clr([%t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n%ex"/>

    <!-- Console logging with colors -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${COLORED_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Archivo de log con rolling policy -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/application.log</file>

        <!-- Rolling policy -->
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/application-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>  <!-- Mantener logs de los últimos 30 días -->
            <totalSizeCap>1GB</totalSizeCap> <!-- Limitar el tamaño total de los logs -->
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Nivel de log por defecto -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <!-- Nivel específico para Spring Security -->
    <logger name="org.springframework.security" level="DEBUG"/>

</configuration>
